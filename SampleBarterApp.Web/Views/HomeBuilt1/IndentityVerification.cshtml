
@{
    ViewBag.Title = "Identity Verification";
    Layout = "~/Views/Shared/UserDashboard_LayoutPage1.cshtml";
}

<div class="container-fluid margintop">
    <div class="card mb-4">
        <div class="card-body pb-2 pt-2">
            <div class="row">
                <div class="col-md-12"><h4 class="pb-0">Identity Verification</h4></div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">

                            <div class="form-group">

                                <div class="col-xs-3">
                                    <label for="password">
                                        Varification Level
                                    </label>
                                    <select class="form-control border-radius" id="ddlcategory">
                                        <option value="0">-Select Type-</option>
                                        <option value="1">Aadhar Card</option>
                                        <option value="2">Driving Licence</option>
                                        <option value="3">Passport</option>
                                        <option value="4">Voter ID</option>
                                        <option value="4">Other</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <div class="col-xs-3">
                                    <label for="password2">
                                        Here Upload Your ID
                                    </label>
                                    @*<input type="password" class="form-control" name="password2" id="password2" placeholder="password2" title="enter your password2.">*@

                                    <input type="file" class="form-control">
                                </div>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group py-5">
                                <table class="table table-bordered ">
                                    <thead>
                                        <tr>
                                            <th class="align-center">Verification Name</th>
                                            <th class="align-center">Your Id</th>
                                            <th class="align-center">Delete</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td>Aadhar Card</td>
                                            <td><img src="~/scss/assets/img/aadhar.jpg" class="img-thumbnail center-block" alt="Aadhar Card" width="150" height="150"></td>
                                            <td><button class="btn-primary">Delete</button></td>
                                        </tr>
                                        <tr>
                                            <td>Driving Licence</td>
                                            <td><img src="~/scss/assets/img/DrivingLicence.jpg" class="img-thumbnail center-block" alt="Aadhar Card" width="150" height="150"></td>
                                            <td><button class="btn-primary">Delete</button></td>
                                        </tr>
                                        <tr>
                                            <td>Passport</td>
                                            <td><img src="~/scss/assets/img/Passport.jpg" class="img-thumbnail center-block" alt="Aadhar Card" width="150" height="150"></td>
                                            <td><button class="btn-primary">Delete</button></td>
                                        </tr>
                                        <tr>
                                            <td>Voter ID</td>
                                            <td><img src="~/scss/assets/img/VoterID.jpg" class="img-thumbnail center-block" alt="Aadhar Card" width="150" height="150"></td>
                                            <td><button class="btn-primary">Delete</button></td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                            <div class="form-group">
                                <div class="col-xs-12">
                                    <br>
                                    <button class="btn btn-lg btn-success" type="submit"><i class="glyphicon glyphicon-ok-sign"></i> Save</button>
                                    <button class="btn btn-lg" type="reset"><i class="glyphicon glyphicon-repeat"></i> Reset</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


